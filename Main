using namespace std;

struct StudProf{
  string studentID;
  string name;
  string birthday;
  string address;
  string gender;
  string degreeProgram;
  int yearLevel;
};

struct Node{
    StudProf profile;
    Node *next;
};

Node *head = nullptr;

void addRecord(fstream &file){
    StudProf newStudent;
    count << "Enter Student ID: ";
    cin >> newStudent.studentID;
    cin.ignore();

    cout << "Enter Full Name: ";
    getlne(cin, newStudent.name);

    cout << "Enter Birthday (YYYY|MM|DD): ";
    getlne(cin, newStudent.birthday);

    cout << "Enter Address: ";
    getlne(cin, newStudent.address);

    cout << "Enter Gender: ";
    getlne(cin, newStudent.gender);

    cout << "Enter Degree Program (e.g Bachelor of Science in Computer Science): ";
    getlne(cin, newStudent.degreeProgram);

    cout << "Enter Year Level: ";
    getlne(cin, newStudent.yearLevel);

    file << newStudent.name << "," << newStudent.birthday << "," << newStudent.address << "," 
    << newStudent.gender << "," << newStudent.degree << "," << newStudent.yearLevel << '\n';

    cout << "Record Added Successfully!\n";
}
